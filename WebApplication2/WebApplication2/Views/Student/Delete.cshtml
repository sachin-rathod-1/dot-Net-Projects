@model Student

@{
    ViewBag.Title = "Delete Student";
}

<form asp-controller="Student" asp-action="Delete" method="post" class="mt-4">

    <div class="form-group row mb-3">
        <label asp-for="StudentId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StudentId" class="form-control" placeholder="Enter Student Id to Delete">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Delete</button>
        </div>
    </div>
</form>
@model List<Learn_MVC_WebApplication1.Models.Student>
@{
    ViewBag.Title = "Student List";
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td class="text-center"><a href="/Student/GetStudent/@student.Id">ViewStudentDetails</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

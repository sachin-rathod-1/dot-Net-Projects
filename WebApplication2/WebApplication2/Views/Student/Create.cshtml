@model Student

@{
    ViewBag.Title = "Create";
}

<form asp-controller="Student" asp-action="Create" method="post" class="mt-4">
    <div class="form-group row mb-3" >
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder=" Name">
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Branch" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Branch" class="form-control" placeholder="Branch Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Gender" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<GenderList>()"></select>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>